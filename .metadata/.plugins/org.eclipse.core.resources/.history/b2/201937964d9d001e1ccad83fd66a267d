package S07;
/**
* 6. Escribe un programa que pinte por pantalla el contorno de una 
* pirámide. La base de la pirámide debe estar formada por 9 asteriscos.
*
* @author Rodolfo Aravena
*
*/
public class ej07 {

	public static void main(String[] args) {
		System.out.println("");
		System.out.println("");
		System.out.println("             *");
		System.out.println("            * *");
		System.out.println("           *   *");
		System.out.println("          *     *");
		System.out.println("         *       *");
		System.out.println("        *         *");
		System.out.println("       *           *");
		System.out.println("      *             *");
		System.out.println("     * * * * * * * * * ");

	}

}
